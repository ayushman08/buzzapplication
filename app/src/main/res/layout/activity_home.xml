<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:weightSum="10"

    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:orientation="vertical"
        android:background="@drawable/bg"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/home__background_img_id">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Home_Description"
            android:id="@+id/home_description_txt_id"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Home_Description_two"
            android:id="@+id/textView8"
            android:textColor="#a2a1b8"
            android:paddingLeft="16dp"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="5dp" />


    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="6">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_img_id"
            android:src="@drawable/smily_icon"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Awesome"
            android:id="@+id/awesome_txt_id"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorAwesomeBlack"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Awesome_Description"
            android:id="@+id/home_awesome_description_id"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorTextDescription"
            android:textSize="12sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />



        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/Recipe"
            android:id="@+id/see_recipe_txt_id"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_round_save"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="25dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/FindRestaurant"
            android:id="@+id/find_recipe_txt_id"
            android:layout_gravity="center"
            android:background="@drawable/button_round_save"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:textSize="15sp"
            android:paddingRight="25dp" />

        <Button
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="showToken"
            android:id="@+id/button" />


    </LinearLayout>



</LinearLayout>
