<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter Ingredients"
        android:background="@color/colorDrawerMenu"
        android:textAppearance="?android:textAppearanceMedium"
        android:padding="16dp"
        android:textColor="@color/colorWhite"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/recipe_1"
        android:scaleType="centerCrop" />

     <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:digits="abcdefghijklmnopqrstuvwxyz"
        android:id="@+id/add_ingredients_edit_txt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
         android:background="#25000000"
         android:textColorHint="@color/colorBlack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorWhite"
        android:hint="Enter the Ingredients"
        android:gravity="center" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:background="@drawable/button_round_save"
        android:text="Cancel"
        android:id="@+id/dialog_cancel_txt"
        android:layout_below="@+id/like_ingredients_edit_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:padding="8dp"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:text="Ok"
        android:background="@drawable/button_round_save"
        android:id="@+id/dialog_ingredients_ok_txt"

        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:padding="8dp"
        android:layout_margin="5dp" />

  </LinearLayout>
  </LinearLayout>